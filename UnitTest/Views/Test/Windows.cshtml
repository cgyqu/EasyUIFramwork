@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Windows</title>
    <link href="@Url.Content("~/Resource/sobox/style.css")" rel="stylesheet" />

</head>
<body>
    <div>
        <input type="button" id="test" value="测试" />
        @*<div id="content"></div>*@
    </div>
</body>
</html>
<script src="@Url.Content("~/Resource/Js/jquery-2.1.3.min.js")"></script>
<script src="@Url.Content("~/Resource/sobox/jquery.sobox.min.js")"></script>
@*<script src="~/Resource/Js/jquery-2.1.3.min.js"></script>*@
@*<script src="~/Resource/sobox/jquery.sobox.min.js"></script>*@
<script type="text/javascript">
    $("#test").on("click", function () {
        $.sobox.pop({
            type: 'ajax',
            width: 300,
            content: "",
            title: "添加",
            ajax: {
                url: '/hotel/AddOld',
                data: {},
                callback: function (dom) {
                    $('#content').html(dom);
                    //$.sobox.alert('提示', '加载成功！');
                }
            },
            btn: [
            {
                text: '确定',
                removePop: false,
                callback: function () {
                    submit();
                }
            },
             {
                 text: '取消', cls: 'a-sopop-cancel'
             }
            ],
        });
    });
    var submit = function () {
        var name = $("#name").val();
        var pwd = $("#pwd").val();
        $.ajax({
            url: "/test/Test" + "?name=" + name + "&pwd=" + pwd,
            type: "Get",
            cache: false,
            dataType: "text",
            success: function (msg) {
                $.sobox.alert("提示", msg);
            },
            error: function () {
                $.sobox.alert("请求出错");
            }
        });
    };
</script>